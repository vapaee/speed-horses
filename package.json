{
    "name": "speed-horses",
    "version": "1.0.0",
    "scripts": {
        "start": "ng serve",
        "serve": "ng serve",
        "build": "ng build --configuration production --output-path dist --base-href ./",
        "clear": "rm -rf dist; rm -rf node_modules .angular; npm --prefix contracts run clear; cd ../web3-octopus && npm run clear;",
        "postinstall": "npm --prefix contracts install && cd ../web3-octopus && npm i",
        "src": "node scripts/concatenate_src.js",
        "build:contracts": "npm --prefix contracts run build:contracts",
        "deploy:check": "npm --prefix contracts run deploy:check",
        "deploy:testnet": "npm --prefix contracts run deploy:testnet",
        "deploy:mainnet": "npm --prefix contracts run deploy:mainnet",
        "test:testnet": "npm --prefix contracts run test:testnet",
        "test:mainnet": "npm --prefix contracts run test:mainnet"
    },
    "dependencies": {
        "@angular/animations": "^19.1.3",
        "@angular/cdk": "^19.2.3",
        "@angular/common": "^19.1.3",
        "@angular/compiler": "^19.1.3",
        "@angular/core": "^19.1.3",
        "@angular/forms": "^19.1.3",
        "@angular/platform-browser": "^19.1.3",
        "@angular/platform-browser-dynamic": "^19.1.3",
        "@angular/router": "^19.1.3",
        "@ngrx/effects": "^19.0.0",
        "@ngrx/store": "^19.0.0",
        "@ngrx/store-devtools": "^19.0.0",
        "@ngx-translate/core": "^16.0.4",
        "@ngx-translate/http-loader": "^16.0.1",
        "@primeuix/themes": "^1.2.3",
        "@wharfkit/account": "^1.4.1",
        "@wharfkit/antelope": "^1.0.13",
        "@wharfkit/common": "^1.4.2",
        "@wharfkit/session": "^1.4.0",
        "@wharfkit/wallet-plugin-anchor": "^1.4.0",
        "@wharfkit/wallet-plugin-cleos": "^1.2.0",
        "@wharfkit/web-renderer": "^1.4.1",
        "esbuild": "^0.25.0",
        "ethers": "^6.13.4",
        "lucide-angular": "^0.483.0",
        "ngrx-store-localstorage": "^19.0.0",
        "primeflex": "^3.3.1",
        "primeicons": "^7.0.0",
        "primeng": "^19.1.4",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^19.2.3",
        "@angular/cli": "^19.2.3",
        "@angular/compiler-cli": "^19.1.3",
        "@types/node": "^18.0.0",
        "typescript": "5.8.3"
    }
}
